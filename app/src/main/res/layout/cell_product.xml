<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="185dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/imageViewCategories"
        android:layout_width="185dp"
        android:layout_height="229dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ao"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/nameCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Áo"
        android:textColor="#000000"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/imageViewCategories"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/priceCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="100.000đ"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/nameCategories"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>